
<% flat = data.flats[person_name] %>

<!-- Inject flat data in template -->

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%="https://kitt.lewagon.com/placeholder/cities/#{flat.city_slug}"%>'); height: 50vh; background-position: center;">
</div>

<div class="container">

  <div class="quick-booking">
   <div class="avatar-with-details">
    <img src='<%="https://kitt.lewagon.com/placeholder/users/#{person_name}"%>' class="avatar-large"/>
    <p><%= person_name %></p>
      <h3><%= flat.description %></h3>
      <p><%= flat.city_name %></p>
      <% s = flat.rating.to_i %>
      <% s.times do %> 
        <i class="far fa-star"></i>
      <% end %>

      <% t = 5 - flat.rating.to_i %>
      <% t.times do %> 
        <i class="fas fa-star"></i>
      <% end %>
    </div>

    <div class="booking-form"> 
      <h2>Book this flat</h2>

      <form class="form-inline">
        <div class="form-group">
          <input type="text" class="form-control" id="exampleInputCheckin3" placeholder="Check-in">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="exampleInputCheckOut3" placeholder="Check-out">
        </div>
        </form>
        
        <select class="form-control">
          <option>1 guest</option>
          <option>2 guests</option>
          <option>3 guests</option>
          <option>4 guests</option>
          <option>5 guests</option>
        </select>

        <button type="submit" class="btn btn-danger btn-block btn-dif">Book now</button>
    </div>
  </div>
</div>

